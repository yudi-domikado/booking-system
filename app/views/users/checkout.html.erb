<h1>Rooms</h1>
<table class="table">
<thead>
<tr>
	<th>Picture</th>
	<th>Name</th>
	<th>Description</th>
	<th>Price</th>
	<th>Booking?</th>
</tr>
</thead>
<tbody>
<% @cart.cart_items.each do |cart_item| %>
  <tr>
  	<td><%= image_tag cart_item.picture.url(:thumb) %></td>
    <td><%= cart_item.name %></td>
    <td><%= cart_item.description %></td>
    <td><%= cart_item.price %></td>
    <td><%= link_to "Booking", room_path(cart_item) %></td>
  </tr>
<% end %>
</tbody>
</table>