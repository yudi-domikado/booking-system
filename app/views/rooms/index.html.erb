<h1>ROOMS</h1>
<div class="news-a">
            <% @rooms.each do |kamar| %>
            <article>
              <header>
                <figure><%= image_tag kamar.picture.url(:thumb) %><figcaption></figcaption></figure>
              </header>

              <div class="descenter">
                <h2><%= kamar.name %></h2>
                <p><%= kamar.description %></p>
                <p class="scheme-d"><span>$</span><%= kamar.price %> <%= link_to "Booking", room_path(kamar) %></p>
              </div>
              <footer>
                <p class="link-b"><%= link_to "View Details", room_path(kamar) %></p>
              </footer>
            </article>
            <% end %>
</div>