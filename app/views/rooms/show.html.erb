<div class="row">
	<div class="span5">
		<h1><%= @room.name %></h1>
		<%= image_tag @room.picture.url(:medium) %>
		<p><br /><%= @room.description %></p>
		<hr />
		<h3>Price</h3>
		<p><%= @room.price %></p>
	</div>

	<div class="span3">
	<%= form_tag carts_path do %>
		<h3>FORM</h3>
		<label>Check In</lable>
		<div class="well">
		  <div data-behaviour='datepickertime' class="input-append">
		    <%= text_field_tag "check_in", "", "data-format" => "MM/dd/yyyy HH:mm PP" %>
		    <span class="add-on">
		      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
		      </i>
		    </span>
		  </div>
		</div>
		<label>Check Out</lable>
		<div class="well">
		  <div data-behaviour='datepickertime' class="input-append">
		    <%= text_field_tag "check_out", "", "data-format" => "MM/dd/yyyy HH:mm PP" %>
		    <span class="add-on">
		      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
		      </i>
		    </span>
		  </div>
		</div>
		<%= hidden_field_tag "room_id", @room_id %>
		<%= submit_tag "BOOKING NOW" %>

		<% end %>
	</div>
</div>