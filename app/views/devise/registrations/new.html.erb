<div class="container-fluid signup-container">
  <%= render "private/shared/errors" %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{class: "form-signin signup"}) do |f| %>

    <h2 class="form-signin-heading"><strong>Office</strong>Service</h2>
    <div class="control-group">
      <div class="controls">
        <span class="add-on"><i class="icon-user"></i></span>
        <%= f.email_field :email, placeholder: "Enter your email", required: true %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <span class="add-on"><i class="icon-lock"></i></span>
        <%= f.password_field :password, placeholder: "Enter your password", required: true %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <span class="add-on"><i class="icon-lock"></i></span>
        <%= f.password_field :password_confirmation, placeholder: "Enter your password confirmation", required: true %>
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <div class="pull-right">
          <button class="btn btn-primary" type="submit">Sign Up</button>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>

  <div class="signInRow">
    <div><h1>Sign Up</h1></div>
    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>