
  <article id="content" class="cols-d">
    <div>
      <h3>Information</h3> 
        <h4 class="scheme-g">User Infomation</h4>
          <ul class="list-c">
            <% if user_signed_in? %>
            <li><span>Full Name</span> <%= current_user.name %></li>
             <li><span>Email Address</span> <span class="email"><%= current_user.email %></span></li>
            <% else %>
            <h4 class="scheme-g"><span></span></h4>
            <% end %>
            <br/>

          </ul>
          <ul class="list-c">  
            <% @cart.cart_items.each do |cart_item| %>
              <li><span>Room Name</span><%= cart_item.room.name %></span></li>
              <li><span>Picture</span>
              <%= image_tag cart_item.room.picture.url(:medium) %>
              </li>
              <li><span>Room price</span><%= number_to_currency(cart_item.room.price, unit: "Rp.", format: "%u %n") %></span></li>
              <li><span>Check in Date</span><%= cart_item.check_in_date.strftime('%d-%B-%Y') %></li>
              <li><span>Start Time</span><%= cart_item.start_time.strftime('%H:%M:%S') %></li>
              <li><span>End Time</span><%= cart_item.end_time.strftime('%H:%M:%S') %></li>
              <li><span>Facilities</span></li>
              <% cart_item.facilities.each do |facility| %>
                <li>- <%= facility.name %> - <%= number_to_currency(facility.price, unit: "Rp.", format: "%u %n") %> (<%= facility.description %>)</li>
              <% end %>
            <p class="scheme-h">Total : <span><span>Rp.</span>790</span></p>
            <p class="link-z"><%= link_to "Delete", cart_item_path(cart_item), :method => :delete %></p>
            <br />
            <hr />
            <% end %>
          </ul>  
      <p class="link-c">
      <%= link_to "Check Out", check_out_users_path %>
      </p>   
    </div>
    <aside>
    <h3>Summary</h3>
    <div class="vcard a">
      <h4 class="fn org">Domikado Meeting Room</h4>
      <p class="adr">Domikado - <span class="locality">Jakarta</span>, <span class="country-name">Indonesia</span></p>
    </div>
  </aside>
  </article>    

