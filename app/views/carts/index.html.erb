<h1>Rooms</h1>
  <table class="table">
    <thead>
    <tr>
    	<th>Picture</th>
    	<th>Name</th>
    	<th>Description</th>
    	<th>Check In</th>
      <th>Check Out</th>
    </tr>
    </thead>
      <tbody>
      <% @cart.cart_items.each do |cart| %>
        <tr>
          <td><%= image_tag cart.room.picture.url(:thumb)  %></td>
        	<td><%= cart.room.try(:name)        %></td>
          <td><%= cart.room.try(:description) %></td>
          <td><%= cart.try(:check_in)    %></td>
          <td><%= cart.try(:check_out)   %></td>
        </tr>
      <% end %>
      </tbody>
  </table>

