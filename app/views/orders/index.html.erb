<div id="content" class="clearfix">
  <div id="left-area" class="clearfix full-wide"> 
    <h1>Order <span>List</span></h1>
    <table class="table">
      <thead >
        <tr>
          <th style="width: 20px;">Code</th>
          <th>Booking Detail</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
      		<tr>
      			<td>
              <%= link_to order.id, order_path(order) %>
            </td>
            <td>
              <table class="table">
                <tr>
                  <% order.order_items.each do |order_item| %> 
          				  <td style="width: 60px;">
                      <%= image_tag order_item.room.picture.url(:thumb)%>
          				  </td>
                    <td>
                      <%= link_to order_item.room.name, room_path(order_item) %> <br/>
                      <%= order_item.check_in_date.strftime("%a, %d %b %Y") %><br/>
                      <%= order_item.start_time.strftime("%H:%M") %> - <%= order_item.end_time.strftime("%H:%M") %>
                    </td>
                  <% end %>
                </tr>
              </table>
            </td>
    			</tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
