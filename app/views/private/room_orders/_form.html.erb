<div class="titleLine">
  <div class="container-fluid">
    <div class="titleIcon"><i class="icon-check"></i></div>
    <ul class="titleLineHeading">
      <li class="heading"><h1>Room Orders</h1></li>
    </ul>
  </div>
</div>
<ul class="breadcrumb">
  <li>
    <i class="icon-home active"></i>
    <%= link_to "Home", private_dashboard_path %>
    <span class="divider"><i class="icon-angle-right"></i></span>
  </li>
  <li>Room Orders <span class="divider"><i class="icon-angle-right"></i></span></li>
  <% if params[:action] =~ /new|create/i %>
    <li class="active"><%= params[:action].gsub(/new/i,"create").titleize %></li>
  <% else %>
    <li class="active"><%= @order.code.upcase %></li>
  <% end %>
  <li class="moveDown pull-right">
    <span class="time"></span>
    <span class="date"></span>
  </li>   
</ul>

<div class="container-fluid">
  <%= render "private/shared/notification" %>
  <%= render partial: "private/shared/errors", locals: {resource: @order} %>
  <%= form_for [:private, @order], html: {class: "form-horizontal contentForm"} do |f| %>
    <div class="row-fluid">
      <div class="span12">
        <div class="containerHeadline new-form-<%= @order.new_record? %>">
          <i class="icon-pencil"></i><h2>Booking Form</h2>
          <% unless @order.new_record? %>
            <div class="controlButton pull-right btn-group">
              <%= link_to "Approve", private_room_order_path(@order, room_order: {status: Order::Status::APPROVED}), method: :put, class: "btn btn-small" if !@order.approved? %>
              <%= link_to "Cancel", private_room_order_path(@order, room_order: {status: Order::Status::CANCELED}), method: :put, class: "btn btn-small" if !@order.canceled? %>
              <%= link_to "Delete", private_room_path(@order), method: :delete, confirm: "Do you want delete this booking room?", class: "btn btn-small" %>
            </div>
          <% end %>
        </div>
        <div class="floatingBox">
          <div class="container-fluid">
            <div class="row-fluid">
              <div class="span12">
                <div class="pull-left">
                  <% if @order.new_record? %>
                    <h5>Customer Information</h5>
                    <p>
                      <%= f.select :user_id, options_from_collection_for_select(User.all, "id", "name", @order.user_id), {prompt: "Select User"},{} %>
                    </p>
                  <% else %>
                    <div class="profileInfo">
                      <%= image_tag(@order.user.company.logo.url(:thumb)) %>
                      <h5 style="margin-bottom:0px;"><%= @order.user.name %></h5>
                      <p><i class="icon-envelope-alt"></i> <%= @order.user.email %></p>
                      <p><i class="icon-phone"></i> <%= @order.user.phone %></p>
                      <p><i class="icon-flag"></i> <%= @order.user.department %></p>
                    </div>
                  <% end %>
                </div>
                <div class="pull-right">
                  <% if @order.new_record? %>
                    <h3> New Booking Room </h3>
                  <% else %>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th class="centered"> BOOKING NO </th>
                          <th class="centered"> BOOKED AT </th>
                          <th class="centered"> STATUS </th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= @order.code %></td>
                          <td><%= @order.order_at.strftime("%d %b %Y %H:%M") %></td>
                          <td><span class="label <%= status_class(@order.status) %>"><%= @order.status.downcase %></span></td>
                        </tr>
                      </tbody>
                    </table>
                  <% end %>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
            <div class="row-fluid">
              <div class="span12">
                <table class="table table-striped">
                   <thead>
                    <tr>
                      <th style="width: 15%"> ROOM NAME </th>
                      <th style="width: 15%"> CHECK IN </th>
                      <th style="width: 15%"> START HOUR </th>
                      <th style="width: 15%"> END HOUR </th>
                      <th style="width: 20%"> STATUS </th>
                    </tr>
                  </thead>
                  <tbody class="room_items">
                    <%= f.fields_for :room_items do |f_item| %> 
                      <%= render 'room_item_fields', :f => f_item %>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <div class="span12 centerize">
                <hr/>
                <%= link_to_add_association f, :room_items, class: "btn btn-small", style: "margin-right: 10px", "data-association-insertion-node" => "tbody.room_items", "data-association-insertion-method" => "append"  do %>
                  <i class="icon-plus"></i>
                  Add Booking Room
                <% end %>
                <button class="btn btn-primary btn-small">Save</button>
              </div>
            </div>
          </div>
        </div>  
      </div>
    </div>
  <% end %>
</div>