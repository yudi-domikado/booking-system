<li class="book-title">&nbsp;</li>
<li>
  <%= form_tag carts_path, :class => 'form-c', remote: true do %>
    <div class="book-now">BOOK NOW:</div>
    <div class="row-fluid">
      <div class="span12">
        <%= label_tag "Meeting Title" %>
        <%= text_field_tag :title, "", class: "span12" %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <%= label_tag "Company Name" %>
        <%= select_tag :company_id, options_for_select(@companies.map{|c| [c.title, c.id]}), {prompt: "Please choose one"} %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <div class="span5">
          <%= label_tag "Date" %>
          <div data-date-format="dd/mm/yyyy" class="input-append date dp-icon">
            <%= text_field_tag :check_in_date, "", class: "span5" %>
            <span class="add-on"><i class="icon-calendar"></i></span>
          </div>
        </div>
        <div class="span6">
          <div class="span6">
            <%= label_tag "Start" %>
            <%= text_field_tag :hour_start, "", class: "timepick span11" %>
          </div>
          <div class="span6">
            <%= label_tag "End" %>
            <%= text_field_tag :hour_end, "", class: "timepick span11" %>
          </div>
        </div>
      </div>
    </div>
    
    <%= hidden_field_tag :room_id, room_id %>
    <p class="submit"><button class="btn btn-small btn-danger">Proceed</button></p>
  <% end %>
</li>