<%= form_tag carts_path, :class => 'form-c' do %>
  <div class="row-fluid">
    <div class="span12">
      <%= label_tag "Your Name" %>
      <%= text_field_tag :full_name, "", class: "span12" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= label_tag "Company Name" %>
      <%= text_field_tag :company, "", class: "span12" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="span4">
        <%= label_tag "Date" %>
        <%= text_field_tag :check_in_date, "", class: "span10" %>
      </div>
      <div class="span4">
        <%= label_tag "Check In" %>
        <%= text_field_tag :hour_start, "", class: "timepick span10" %>
      </div>
      <div class="span4">
        <%= label_tag "Check Out" %>
        <%= text_field_tag :hour_end, "", class: "timepick span10" %>
      </div>
    </div>
  </div>
  
  <%= hidden_field_tag :room_id, 1 %>
  <p class="submit"><button class="btn btn-small btn-danger">Proceed</button></p>
<% end %>