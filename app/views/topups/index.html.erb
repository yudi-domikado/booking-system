<h1>TOP UPS</h1>
<table class="table">

<thead>
<tr>
  <th>User</th>
	<th>Credit</th>
	<th>Date</th>
  <th>Action</th>
</tr>
</thead>
<tbody>
<% @topups.each do |tu| %>
  <tr>
    <td><%= tu.user.try(:email) %></td>
    <td><%= tu.credit %></td>
    <td><%= tu.try(:topup_date) %></td>
    <td><%= link_to 'Edit', edit_topup_path(tu) %> | 
    <%= link_to 'Destroy', tu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<%= link_to "create", new_topup_path, :class => 'btn btn-primary' %> 